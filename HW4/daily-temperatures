class Solution(object):
    def dailyTemperatures(self, temperatures):
        """
        :type temperatures: List[int]
        :rtype: List[int]
        """
        lst = []
        stck = [0] * len(temperatures)

        for i in range(len(temperatures)):
            while lst and temperatures[i] > temperatures[lst[-1]]:
                idx = lst.pop()
                stck[idx] = i - idx
            lst.append(i)
        return stck
